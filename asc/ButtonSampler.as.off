package{
	import flash.events.MouseEvent;
	
	public class ButtonSampler extends ButtonBase{
		public var moveDirection:int;
		
		public function ButtonSampler(){
			super();
			//this.moveDirection = dir;
		}
		
		override public function addEventListeners(){
			super.addEventListeners();
			this.addEventListener(MouseEvent.MOUSE_DOWN, downHandler);
			this.addEventListener(MouseEvent.MOUSE_UP, upHandler);
		}
		
		private function upHandler(e:MouseEvent){
			trace("mouseUp");
			this.gotoAndStop(1);
			var panCol:PanelColors = this.parent as PanelColors;
			panCol.sampler.stopMoveHandler();
		}
		
		private function downHandler(e:MouseEvent){
			trace("mouseDown");
			this.gotoAndStop(3);
			var panCol:PanelColors = this.parent as PanelColors;
			panCol.sampler.moveHandler(moveDirection);
		}
		
		//override public function clickHandler(e:MouseEvent){}
	}
	
}
